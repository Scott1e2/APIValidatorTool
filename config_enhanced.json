{
    "api_endpoints": [
        "https://api.example.com/v1/users",
        "https://api.example.com/v1/orders"
    ],
    "authentication": {
        "token_type": "Bearer",
        "access_token": "your_access_token_here",
        "mfa_check": true,
        "role_based_testing": [
            "admin",
            "user",
            "guest"
        ],
        "token_rotation": true
    },
    "security_checks": {
        "auth_validation": true,
        "rate_limiting_check": true,
        "sensitive_data_check": true,
        "endpoint_enumeration": true,
        "bola_check": true,
        "sql_injection_test": true,
        "command_injection_test": true
    },
    "red_team_options": {
        "token_manipulation": true,
        "replay_attack_simulation": true,
        "privilege_escalation": true,
        "rate_limit_bypass": true,
        "business_logic_testing": true
    },
    "sensitive_data_handling": {
        "dynamic_data_leakage_detection": true,
        "data_minimization_check": true
    },
    "compliance_mapping": {
        "owasp_api_top_10": true,
        "cwe_mapping": true,
        "mitre_attack_mapping": true
    },
    "alert_thresholds": {
        "unauthorized_access": true,
        "sensitive_data_exposure": true,
        "rate_limit_violation": true
    },
    "baseline_tracking": {
        "enable_baseline_tracking": true,
        "report_history_limit": 10
    },
    "real_time_monitoring": {
        "event_alerts": [
            "slack",
            "email"
        ],
        "anomaly_detection": true
    }
}